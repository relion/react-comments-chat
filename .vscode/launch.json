{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Debug React (served by Node 8088)",
      "url": "http://localhost:8088",
      "webRoot": "${workspaceFolder}",

      "sourceMaps": true,

      "sourceMapPathOverrides": {
        "components/*": "${workspaceFolder}/src/components/*",
        "webpack:///components/*": "${workspaceFolder}/src/components/*",
        "webpack://./components/*": "${workspaceFolder}/src/components/*",
        "../components/*": "${workspaceFolder}/src/components/*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Node",
      "program": "${workspaceFolder}/app.js",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "Debug Client + Server",
      "configurations": ["Debug React (served by Node 8088)", "Debug Node"]
    }
  ]
}
